{
  "name": "@mermaid-js/flowchart-elk",
  "version": "1.0.0",
  "description": "Flowchart plugin for mermaid with ELK layout",
  "module": "dist/mermaid-flowchart-elk.core.mjs",
  "types": "dist/packages/mermaid-flowchart-elk/src/detector.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/mermaid-flowchart-elk.core.mjs",
      "types": "./dist/packages/mermaid-flowchart-elk/src/detector.d.ts"
    },
    "./*": "./*"
  },
  "keywords": [
    "diagram",
    "markdown",
    "flowchart",
    "elk",
    "mermaid"
  ],
  "scripts": {
    "prepublishOnly": "pnpm -w run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mermaid-js/mermaid"
  },
  "author": "Knut Sveidqvist",
  "license": "MIT",
  "standard": {
    "ignore": [
      "**/parser/*.js",
      "dist/**/*.js",
      "cypress/**/*.js"
    ],
    "globals": [
      "page"
    ]
  },
  "dependencies": {
    "d3": "^7.4.0",
    "dagre-d3-es": "7.0.10",
    "khroma": "^2.0.0",
    "elkjs": "^0.8.2"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "rimraf": "^5.0.0",
    "mermaid": "workspace:*"
  },
  "files": [
    "dist"
  ]
}
